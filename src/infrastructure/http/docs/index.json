{
  "openapi": "3.0.3",
  "info": {
    "title": "Simple Dashboard - OpenAPI 3.0",
    "contact": {
      "email": "luckzivanius@gmail.com"
    },
    "version": "0.0.0"
  },
  "servers": [
    {
      "url": "https://{url}/api/v1",
      "description": "Production Server",
      "variables": {
        "url": {
          "default": "https://aha-api-kappa.vercel.app/",
          "description": "Production URL"
        }
      }
    },
    {
      "url": "http://localhost:${port}/api/v1",
      "description": "Local Development Server",
      "variables": {
        "port": {
          "default": "3001",
          "description": "Production URL"
        }
      }
    }
  ],
  "tags": [
    {
      "name": "User"
    },
    {
      "name": "Authentication"
    },
    {
      "name": "Verification"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Get a list of users",
        "tags": [
          "User"
        ],
        "description": "Retrieve a list of users with pagination.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "description": "Page number"
          },
          {
            "in": "query",
            "name": "pageSize",
            "schema": {
              "type": "integer"
            },
            "description": "Items per page"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of users",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/paginated"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/forbidden"
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "summary": "Get current user details",
        "tags": [
          "User"
        ],
        "description": "Retrieve details of the currently authenticated user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Current user details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          }
        }
      },
      "patch": {
        "summary": "Update current user details",
        "tags": [
          "User"
        ],
        "description": "Update details of the currently authenticated user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User details updated successfully"
          },
          "400": {
            "$ref": "#/components/responses/bad-request"
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          }
        }
      }
    },
    "/users/stats": {
      "get": {
        "summary": "Get user statistics",
        "tags": [
          "User"
        ],
        "description": "Retrieve statistics for the currently authenticated user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User statistics",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user-statistic"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/forbidden"
          }
        }
      }
    },
    "/users/verify": {
      "get": {
        "summary": "Verify user's email with a token",
        "tags": [
          "Verification"
        ],
        "description": "Verify a user's email with a token.",
        "parameters": [
          {
            "in": "query",
            "name": "token",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Verification token"
          }
        ],
        "responses": {
          "200": {
            "description": "Email verification successful"
          },
          "400": {
            "$ref": "#/components/responses/bad-request"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login with credentials",
        "tags": [
          "Authentication"
        ],
        "description": "Login using email and password.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login/auth0": {
      "post": {
        "summary": "Login with Auth0 token",
        "tags": [
          "Authentication"
        ],
        "description": "Login using an Auth0 token.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Register user",
        "tags": [
          "Authentication"
        ],
        "description": "Register a new user.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register/auth0": {
      "post": {
        "summary": "Register with Auth0 token",
        "tags": [
          "Authentication"
        ],
        "description": "Register using an Auth0 token.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/change-password": {
      "put": {
        "summary": "Change user password",
        "tags": [
          "Authentication"
        ],
        "description": "Change the current user's password.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "currentPassword": {
                    "type": "string"
                  },
                  "newPassword": {
                    "type": "string"
                  },
                  "confirmPassword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password changed successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "$ref": "#/components/schemas/error"
      },
      "Paginated": {
        "$ref": "#/components/schemas/paginated"
      },
      "User": {
        "$ref": "#/components/schemas/user"
      },
      "UserStatistic": {
        "$ref": "#/components/schemas/user-statistic"
      },
      "Token": {
        "$ref": "#/components/schemas/token"
      },
      "paginated": {
        "type": "object",
        "properties": {
          "page": {
            "type": "number"
          },
          "pageSize": {
            "type": "number"
          },
          "total": {
            "type": "number"
          },
          "data": {
            "type": "array"
          }
        }
      },
      "error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "isEmailVerified": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string"
          },
          "loginCount": {
            "type": "number"
          },
          "lastSession": {
            "type": "string"
          },
          "allowChangePassword": {
            "type": "boolean"
          }
        }
      },
      "user-statistic": {
        "type": "object",
        "properties": {
          "totalUsers": {
            "type": "number"
          },
          "todaySession": {
            "type": "number"
          },
          "avg7DaysSession": {
            "type": "number"
          }
        }
      },
      "token": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "unauthorized": {
        "description": "Unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/error"
            },
            "example": {
              "message": "Unauthorized"
            }
          }
        }
      },
      "forbidden": {
        "description": "Forbidden",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/error"
            },
            "example": {
              "message": "Forbidden"
            }
          }
        }
      },
      "bad-request": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/error"
            },
            "example": {
              "message": "Bad request"
            }
          }
        }
      }
    }
  }
}